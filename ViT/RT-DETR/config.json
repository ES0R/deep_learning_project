{
    "backbone": {
        "layers": 50,
        "width_multiplier": 1.0,
        "depth_multiplier": 1.0
    },
    "transformer": {
        "encoder_layers": 6,
        "decoder_layers": 6,
        "attention_heads": 8,
        "feedforward_dim": 2048,
        "dropout": 0.1
    },
    "detr": {
        "object_queries": 100,
        "iou_threshold": 0.5
    },
    "training": {
        "batch_size": 16,
        "learning_rate": 1e-4,
        "lr_scheduler_step_size": 20,
        "lr_scheduler_gamma": 0.1,
        "epochs": 100,
        "weight_decay": 1e-4,
        "gradient_clip": 0.1
    },
    "loss": {
        "bbox_loss_weight": 5,
        "giou_loss_weight": 2,
        "classification_loss_weight": 1,
        "matching_cost_class": 1,
        "matching_cost_bbox": 5,
        "matching_cost_giou": 2
    },
    "dataset": {
        "image_min_size": 800,
        "image_max_size": 1333,
        "flip_prob": 0.5,
        "color_jitter_brightness": 0.1,
        "color_jitter_contrast": 0.1,
        "color_jitter_saturation": 0.1,
        "color_jitter_hue": 0.1
    },
    "environment": {
        "device": "cuda",
        "num_workers": 4,
        "seed": 42
    }
}
